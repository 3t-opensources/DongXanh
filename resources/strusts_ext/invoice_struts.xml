<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="invoice" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="authentication"
				class="com.home.listener.AuthenticationInterceptor"></interceptor>
			<interceptor-stack name="authStack">
				<interceptor-ref name="authentication"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="authStack"></default-interceptor-ref>

		<global-results>
			<result name="login" type="redirect">/dongxanh.action</result>
		</global-results>

		<action name="dongxanh">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result>/login.jsp</result>
		</action>


		<action name="getAllJobCaptureAction" method="getAllJob"
			class="com.home.action.InvoiceDataAction">
			<result type="json" />
		</action>
		<action name="getAllDataCaptureAction" method="getAllData"
			class="com.home.action.InvoiceDataAction">
			<result type="json" />
		</action>
		

	</package>
</struts>